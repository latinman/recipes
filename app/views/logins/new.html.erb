<%= render "shared/page_title", title: "Log In" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
        <%= form_tag login_path do %>
            <div class="form-group">
                <%= label_tag :email %>
                <%= email_field_tag :email %>
            </div>
            <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
            </div>
            <div class="actions">
                 <%= submit_tag "Login", class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
  </div>
</div>